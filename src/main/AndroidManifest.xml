<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.motivational">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.failure"
            android:parentActivityName=".Activities.MainActivity"
            />
        <activity
            android:name=".Activities.success"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.email"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.Sharequote"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.comment"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.register" />
        <activity android:name=".Activities.instagram" />
        <activity android:name=".Activities.Login" />
        <activity
            android:name=".Activities.discuss"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.employeequote"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.student"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>